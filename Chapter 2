name = 'eric'
print('Hello ' + name.title() + ', would you like to learn some Python today?')
print(name.upper())
print(name.lower())
print(name.title())
print('Albert Einstein once said, "A person who never made a mistake never tried anythin new."')
famous_person = "Albert Einstein"
message = "A person who never made a mistake never tried anythin new."
print(famous_person.title() + ' once said,' + ' "' + message + '"' )

name2 = ' Eric '
print(name2.rstrip()) # end space gone
print(name2.lstrip()) # front space gone
print(name2.strip()) # both end and front spaces gone

print(2+6)
print(10-2)
print(2*4)
print(16/2) # decimal

number = 2
message = "My number is " + str(number)
print(message)
